<mvc:View
        controllerName="leverx.sap.gnatyk.Map.controller.ReviewItem"
        xmlns:l="sap.ui.layout"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m">
    <l:VerticalLayout
            class="sapUiContentPadding"
            width="100%">
        <l:content>
            <List
                    items="{Reviews}"
                    id="commentsTable">
                <FeedListItem
                        sender="{UserDisplayName}"
                        icon="{AuthorPicUrl}"
                        senderPress="onPress"
                        iconPress="onPress"
                        iconDensityAware="false"
                        info="{Type}"
                        text="{Comment}" />
            </List>
        </l:content>
    </l:VerticalLayout>
</mvc:View>